<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FomeLine.Views.ListGroupView">
  
  <StackLayout Margin="15">
    <SearchBar x:Name="busca" Placeholder="Buscar..."></SearchBar>
    <ListView x:Name="lista" IsGroupingEnabled="True" GroupDisplayBinding="{Binding Key}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <TextCell Text="{Binding Nome}" Detail="{Binding Valor}" TextColor="White"></TextCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>