<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FomeLine.Views.Produtos.AddProdutoView">

  <ContentPage.Content>
    <StackLayout Orientation="Vertical" VerticalOptions="StartAndExpand" Padding="10" Spacing="10">
      <Label Text="Nome"></Label>
      <Entry Text="{Binding Nome}" Placeholder="Ex.: Pizza M" ></Entry>

      <Label Text="Valor"></Label>
      <Entry Text="{Binding Valor}" Placeholder="Ex.: 9.00" ></Entry>

      <Button Text="Gravar" Command="{Binding GravarCommand}" BackgroundColor="Green" TextColor="White"></Button>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>