<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FomeLine.Views.Produtos.ListaProdutosView"
             Title="Produtos">
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness">
      <OnPlatform.iOS>0, 20, 0, 0</OnPlatform.iOS>
    </OnPlatform>
  </ContentPage.Padding>
  <StackLayout>
    <SearchBar x:Name="busca" Placeholder="Buscar..."></SearchBar>
    <ListView x:Name="lista" IsGroupingEnabled="True" GroupDisplayBinding="{Binding Key}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ImageCell TextColor="White" ImageSource="{Binding Imagem}" Text="{Binding Nome}" Detail="{Binding Valor}">
            <ImageCell.Command></ImageCell.Command>
          </ImageCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>