<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FomeLine.Views.Produtos.ListaProdutosView"
             Title="Produtos">
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness">
      <OnPlatform.iOS>0, 20, 0, 0</OnPlatform.iOS>
    </OnPlatform>
  </ContentPage.Padding>
  <Label Text="Produtos Disponíveis 0.1" VerticalOptions="Center" HorizontalOptions="Center" />

  <ListView ItemsSource="{Binding ListaProdutos}" ItemTapped="SelecionarCommand" >
    <ListView.ItemTemplate>
      <DataTemplate>
        <ViewCell>
          <StackLayout>
            <Label Text="{Binding Nome}" FontSize="12"></Label>
            <Label Text="{Binding Valor}" FontSize="10" Opacity="0.6"></Label>
          </StackLayout>
        </ViewCell>
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
</ContentPage>